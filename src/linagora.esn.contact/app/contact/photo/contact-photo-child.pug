a
  img(ng-class="{'esn-avatar': listView, 'clickable': editable}" ng-src="{{contactUserAvatar}}" src="" fallback-src="{{displayShell.getDefaultAvatar()}}" alt="{{ 'Profile Picture' | translate }}")
  i.mdi.i-contact-list(ng-class="displayShell.getOverlayIcon()")
a.edit-hint(ng-if='editable')
  i.mdi.mdi-camera
  span(data-ng-switch='contactState')
    span(data-ng-switch-when='edit') {{ 'Update profile picture' | translate }}
    span(data-ng-switch-when='new') {{ 'Add a profile picture' | translate }}
