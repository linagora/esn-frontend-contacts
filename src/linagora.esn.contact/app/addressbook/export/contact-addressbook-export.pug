.modal(tabindex="-1", role="dialog", ng-init="$ctrl.$onInit()")
  .modal-dialog
    .modal-content
      .modal-header
        h4.modal-title {{ 'Export contacts' | translate }}
      .modal-body
        p {{ 'Export your contacts in "%s" to vCard format file (.vcf) that you can import to other applications.' | translate:$ctrl }}
      .modal-footer
        button.btn.btn-link(ng-click="$hide()")
          | {{ 'Cancel' | translate }}
        a.btn.btn-primary(ng-click="$hide()", ng-href="{{::$ctrl.exportUrl}}")
          | {{ 'Export' | translate }}
